@model Client.Models.JobViewModel

@{
    ViewData["Title"] = "Job Details";
}

<h1>Job Details</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">@Model.JobTitle</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Job ID:</strong> @Model.JobId</li>
                        <li class="list-group-item"><strong>Job Title:</strong> @Model.JobTitle</li>
                        <li class="list-group-item"><strong>Base Salary:</strong> @Model.BaseSalary</li>
                        <li class="list-group-item"><strong>Department:</strong> @Model.Department</li>
                        <li class="list-group-item"><strong>Manager:</strong> @Model.Manager.FirstName @Model.Manager.LastName</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Job")" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
